<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Tag -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- SEO -->
    <meta name="description" content="150 words">
    <meta name="author" content="ashutosh">
    <meta name="url" content="http://www.codewithash.blog">
    <meta name="copyright" content="Code With Ash">
    <meta name="robots" content="index,follow">


    <title>Code With Ash - Blogs</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/favicon.png">
    <link rel="apple-touch-icon" sizes="144x144" type="image/x-icon" href="images/favicon.png">

    <!-- All CSS Plugins -->
    <link rel="stylesheet" type="text/css" href="blog/css/plugin.css">

    <!-- Main CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="blog/css/style.css">

    <!-- Google Web Fonts  -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700">

</head>

<body>
    <div class="preloader">
        <div class="rounder"></div>
    </div>
    <div id="main">
        <div class="container">
            <div class="row">
                

                <div class="col-md-12">
                    <div class="col-md-12 page-body">
                 
                            <div class="sub-title">
                                <h1 class="text-center">Code With Ash</h1>
                                <form  method="POST" action="/blogs">
                                    <div class="subscribe-form margin-top-10">
                                        <input id="mc-search" type="text" placeholder="Search For Blogs" class="text-input" name="title">
                                        <button class="submit-btn" type="submit">Submit</button>
                                        
                                     </div>
                                </form>
                            </div>
                            <div class="col-md-12 content-page">
                                <%if(typeof blogData!=='undefined'){%>
                                     
                                    <%for(const blog of blogData){ %>
                                        <div class="col-md-12 blog-post">
                                            <%if(blog.image){%>
                                            <div class="post-image">
                                                <img src="../blogUploads/<%=blog.image%>" alt="">                                
                                            </div> 
                                            <%}%>
                                            <div class="post-title">
                                                <a href="/blogview?id=<%=blog._id%>">
                                                    <h1><%=blog.title%></h1>
                                                </a>
                                            </div>
                                            <div class="post-info">
                                                <span><%=blog.date.toLocaleDateString()%> by <a href="#" target="_blank"><%=blog.author%></a></span>
                                            </div>
                                            <p>
                                                <%-blog.content.slice(0,500) + "..." %>
                                            </p>
                                            <a href="/blogview?id=<%=blog._id%>"
                                                class="button button-style button-anim fa fa-long-arrow-right"><span>Read
                                                    More</span></a>
                                        </div>     
                                    <%}%>
                                <%}else{%>
                                    <div class="post-title">
                                            <h1>Not Found</h1>
                                    </div>
                                <%}%>
                            </div>
                            <div class="col-md-12 text-center">
                                <a href="javascript:void(0)" id="load-more-post" class="load-more-button">Load</a>
                                <div id="post-end-message"></div>
                            </div>

                        <!-- Subscribe Form Start -->
                        <div class="col-md-8 col-md-offset-2">
                           
                        </div>
                    </div>
                </div>
                <!-- Blog Post (Right Sidebar) End -->

            </div>
        </div>
    </div>



    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->


    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="blog/js/jquery.min.js"></script>
    <script type="text/javascript" src="blog/js/plugin.js"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="blog/js/scripts.js"></script>


</body>
<style>
    
</style>
</html>